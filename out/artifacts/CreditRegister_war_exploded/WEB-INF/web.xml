<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>UpdateAndGetUserServlet</servlet-name>
        <servlet-class>api.servlet.nguoidung.UpdateAndGetUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAndGetUserServlet</servlet-name>
        <url-pattern>/api/users/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchAndCreateUserServlet</servlet-name>
        <servlet-class>api.servlet.nguoidung.SearchAndCreateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchAndCreateUserServlet</servlet-name>
        <url-pattern>/api/users/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateAndGetLearnFormServlet</servlet-name>
        <servlet-class>api.servlet.phieudangkyhoc.UpdateAndGetLearnFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAndGetLearnFormServlet</servlet-name>
        <url-pattern>/api/learn_forms/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchStudentByCode</servlet-name>
        <servlet-class>api.servlet.sinhvien.SearchStudentByCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchStudentByCode</servlet-name>
        <url-pattern>/api/students/</url-pattern>
    </servlet-mapping>

    <servlet>
