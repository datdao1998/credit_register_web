    </servlet>
    <servlet-mapping>
        <servlet-name>StudentAddTemporalLearnFormServlet</servlet-name>
        <url-pattern>/add_temporal_learn_form</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentSaveLearnFormServlet</servlet-name>
        <servlet-class>web.servlet.StudentSaveLearnFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentSaveLearnFormServlet</servlet-name>
        <url-pattern>/save_learn_form</url-pattern>
    </servlet-mapping>
</web-app>