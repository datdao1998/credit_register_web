        <servlet-class>api.servlet.monhoc.SearchSubjectBySemesterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchSubjectBySemesterServlet</servlet-name>
        <url-pattern>/api/subjects/search_by_semester/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchPhieuDangKyDayBySubjectAndSemesterServlet</servlet-name>
        <servlet-class>api.servlet.phieudangkyday.SearchPhieuDangKyDayBySubjectAndSemesterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchPhieuDangKyDayBySubjectAndSemesterServlet</servlet-name>
        <url-pattern>/api/teach_forms/search_teach_form_by_subject/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchAvailableFormServlet</servlet-name>
        <servlet-class>api.servlet.phieudangkyhoc.SearchAvailableFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchAvailableFormServlet</servlet-name>
        <url-pattern>/api/learn_forms/available/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchTemporalFormServlet</servlet-name>
        <servlet-class>api.servlet.phieudangkyhoc.SearchTemporalFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchTemporalFormServlet</servlet-name>
        <url-pattern>/api/learn_forms/temporal/</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdateAndGetPhieuDangKyDayServlet</servlet-name>
        <servlet-class>api.servlet.phieudangkyday.UpdateAndGetPhieuDangKyDayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAndGetPhieuDangKyDayServlet</servlet-name>
        <url-pattern>/api/teach_forms/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateLearnFormServlet</servlet-name>
        <servlet-class>api.servlet.phieudangkyhoc.CreateLearnFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateLearnFormServlet</servlet-name>
        <url-pattern>/api/learn_forms/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>web.servlet.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/customer/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewTKBServlet</servlet-name>
        <servlet-class>web.servlet.ViewTKBServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewTKBServlet</servlet-name>
